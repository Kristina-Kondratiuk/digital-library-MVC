<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add new book â€” Digital Library</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%- include('../partials/navigation', { activePage: 'books' }) %>
    <div class="form-section">
      <h1>Add new book</h1>
      <form action="/books/add" method="POST" class="app-form">
        <div class="form-row">
          <label for="title">Title:</label>
          <input type="text" name="title" id="title" required />
        </div>
        <div class="form-row">
          <label for="authorOrNew">Author:</label>
          <div class="input-icon">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 20 20"><path d="M10 10a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm1 2H9a6 6 0 0 0-6 6 1 1 0 0 0 1 1h12a1 1 0 0 0 1-1 6 6 0 0 0-6-6z"/></svg>
            <input
              list="authors"
              name="authorOrNew"
              id="authorOrNew"
              placeholder="Start typing or select..."
              required
              autocomplete="off"
            />
            <datalist id="authors">
              <% authors.forEach(author => { %>
                <option value="<%= author.name %>"></option>
              <% }) %>
            </datalist>
          </div>
        </div>
        <div class="form-row">
          <label for="year">Year:</label>
          <input type="number" name="year" id="year" min="0" required />
        </div>
        <div class="form-row">
          <label for="genre">Genre:</label>
          <input type="text" name="genre" id="genre" list="genreList" />
          <datalist id="genreList">
            <% genres.forEach(genre => { %>
              <option value="<%= genre %>"></option>
            <% }) %>
          </datalist>
        </div>
        <div class="form-row">
          <label for="description">Description:</label>
          <textarea name="description" id="description" rows="3"></textarea>
        </div>
        <div class="form-btns">
          <button type="submit" class="btn">Add book</button>
          <a href="/books" class="btn secondary">Back to list</a>
        </div>
      </form>
    </div>
  </body>
</html>
