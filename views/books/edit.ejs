<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Book â€” Digital Library</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../partials/navigation', { activePage: 'books' }) %>
    <div class="container form-section">
        <h1>Edit book</h1>
        <form action="/books/edit/<%= book._id %>" method="POST" class="app-form">
            <div class="form-row">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<%= book.title %>" required>
            </div>
            <div class="form-row">
                <label for="author">Author:</label>
                <div class="input-icon">
                  <svg width="17" height="17" fill="currentColor" viewBox="0 0 20 20"><path d="M10 10a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm1 2H9a6 6 0 0 0-6 6 1 1 0 0 0 1 1h12a1 1 0 0 0 1-1 6 6 0 0 0-6-6z"/></svg>
                  <select name="author" id="author" required>
                    <% authors.forEach(author => { %>
                      <option value="<%= author._id %>" <%= author._id.toString() === book.author.toString() ? "selected" : "" %>>
                        <%= author.name %>
                      </option>
                    <% }) %>
                  </select>
                </div>            
            </div>
            <div class="form-row">
                <label for="year">Year:</label>
                <input type="number" name="year" id="year" value="<%= book.year %>" min="0" required>
            </div>
            <div class="form-row">
                <label for="genre">Genre:</label>
                <input type="text" name="genre" id="genre" value="<%= book.genre %>">
            </div>
            <div class="form-row">
                <label for="description">Description:</label>
                <textarea name="description" id="description" rows="4"><%= book.description %></textarea>
            </div>
            <div class="form-btns">
                <button type="submit" class="btn">Update book</button>
                <a href="/books" class="btn secondary">Back to list</a>
            </div>
        </form>
    </div>
</body>
</html>
